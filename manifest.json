{
  "name": "Linux Scroll Speed Fix",
  "version": "2.0.0",
  "description": "Fix the slow scroll speed in Linux Chromium based browser",
  "permissions": ["storage"],
  "host_permissions": ["https://*/*","http://*/*"],
  "content_security_policy": {
    "extension_pages": "default-src 'none'; img-src 'self'; script-src 'self'",
    "sandbox": "sandbox default-src 'none';"
  },
  "background": {
    "service_worker": "content.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_globs": [
        "*.pdf"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "author": "BirdInFire",
  "incognito": "split",
  "manifest_version": 3
}

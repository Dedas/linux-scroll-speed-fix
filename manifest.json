{
  "name": "Linux Scroll Speed Fix",
  "version": "1.8",
  "description": "Fix the slow scroll speed in Linux Chrome by setting it to the Windows value",
  "permissions": ["storage"],
  "background": {
    "service_worker": "content.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_globs": [
        "*.pdf"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "manifest_version": 3
}
